#!/bin/sh
ROOT=$(pwd)
while [ ! -d $ROOT/.git ]; do
  ROOT=$(dirname $ROOT)
  if [ "$ROOT" == "/" ; then
    echo "could not find root, are you in the git repository?"
    exit
  fi
done

MACHINE=`uname -m`
[ -z "$CC" ] && [ ! -z `which gcc` ] && CC="gcc"
[ -z "$CC" ] && [ ! -z `which tcc` ] && CC="tcc"
[ -z "$CC" ] && [ ! -z `which cc` ] && CC="cc"
BIN_DIR="build-$MACHINE-$CC-Debug"

cd $ROOT/$BIN_DIR
make install
cd -
